<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HolaMundoMAUI.PaginaAdmin"
             Title="PaginaAdmin"
             BackgroundColor="White">
    <FlexLayout BackgroundColor="White">
        <StackLayout x:Name="MenuLateral" 
                     WidthRequest="130" 
                     HeightRequest="550" 
                     BackgroundColor="#b9b6bf"
                     Margin="0,-32,0,0"
                     HorizontalOptions="StartAndExpand">
            
            <Label
                    x:Name="Label_NameUser"
                    VerticalTextAlignment="Center"
                    HorizontalTextAlignment="Center"
                    FontSize="14"
                    FontAttributes="Bold"
                    Margin="0,10,0,0"/>
            <ImageButton
                x:Name="BtnUsuarios"
                Source="user.png"
                WidthRequest="70"
                HeightRequest="70"
                Margin="0,10,0,0"
                Clicked="BtnUsuarios_Clicked"/>
            <Label
                Text="Usuarios"
                FontAttributes="Bold"
                FontSize="12"
                Margin="40,-10,0,0"
                />
            <ImageButton
                x:Name="BtnTrabajadores"
                Source="trabajador.png"
                WidthRequest="70"
                HeightRequest="70"
                Margin="0,15,0,0"
                Clicked="BtnTrabajadores_Clicked"/>
            <Label
                Text="Trabajadores"
                FontAttributes="Bold"
                FontSize="12"
                Margin="25,-10,0,0"/>
            <ImageButton
                x:Name="BtnGruposTrabajo"
                Source="grupos.png"
                WidthRequest="70"
                HeightRequest="70"
                Margin="0,15,0,0"
                Clicked="BtnGruposTrabajo_Clicked"/>
            <Label
                Text="Grupos de trabajo"
                FontAttributes="Bold"
                FontSize="12"
                Margin="10,-10,0,0"/>
            <ImageButton
                x:Name="BtnZonas"
                Source="zonas.png"
                WidthRequest="70"
                HeightRequest="70"
                Margin="0,15,0,0"
                Clicked="BtnZonas_Clicked"/>
            <Label
                Text="Zonas de trabajo"
                FontAttributes="Bold"
                FontSize="12"
                Margin="15,-10,0,0"/>
            <ImageButton
                x:Name="BtnTareas"
                Source="tareas.png"
                WidthRequest="70"
                HeightRequest="70"
                Margin="0,15,0,0"/>
            <Label
                Text="Tareas"
                FontAttributes="Bold"
                FontSize="12"
                Margin="45,-10,0,0"/>
        </StackLayout >
        <StackLayout x:Name="ContenedorVentana">
            <StackLayout x:Name="ListViewUsers" 
                         IsVisible="False"
                         IsEnabled="False"
                         >
                <Label x:Name="LabelTitulo"
                Text="Tech Talent &#10; Página de administracion"
                TextColor="Black"
                FontAttributes="Bold"
                HorizontalTextAlignment="Center"
                SemanticProperties.Description="Tech Talent Fiching System"
                FontSize="20"
                HorizontalOptions="Center"/>
                <StackLayout x:Name="BarraDivisoraTituloArriba"
                            BackgroundColor="Black"
                            WidthRequest="500"
                            HeightRequest="2"
                            HorizontalOptions="Center"
                            Margin="0,10,0,10"/>
                <ListView 
                x:Name="ListViewUsuarios" 
                WidthRequest="520"  
                HeightRequest="300"
                ItemSelected="OnItemSelectedUsuarios">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <ViewCell>
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>
                                    <Label 
                                       Text="Usuario:" 
                                       Margin="-325,0,0,0" 
                                       FontSize="16"
                                       FontAttributes="Bold"
                                       WidthRequest="100"
                                       VerticalOptions="Center"
                                    />
                                    <Label 
                                       WidthRequest="100"
                                       Text="{Binding Username}" 
                                       Margin="-180,0,0,0" 
                                       FontSize="16"
                                       VerticalOptions="Center"/>
                                    <Label  
                                       Text="Contraseña:" 
                                       Margin="50,0,0,0" 
                                       FontSize="16"
                                       FontAttributes="Bold"
                                       WidthRequest="100"
                                       VerticalOptions="Center"/>
                                    <Label 
                                       Text="{Binding Password}" 
                                       Margin="240,0,0,0" 
                                       FontSize="16"
                                       WidthRequest="100"
                                       VerticalOptions="Center"/>
                                    <ImageButton
                                       Source="editar.png"  
                                       WidthRequest="50"
                                       HeightRequest="50"
                                       VerticalOptions="Center"
                                       Margin="390,0,0,0"
                                       x:Name="BotonEditar"
                                        Clicked="BotonEditarUsuarios_Clicked"/>
                                    <ImageButton
                                       Source="borrar.png"
                                       Clicked="BotonBorrarUsuarios_Clicked"
                                       WidthRequest="50"
                                       HeightRequest="50"
                                       VerticalOptions="Center"
                                       Margin="460,0,0,0"
                                       x:Name="BotonBorrar"/>
                                </Grid>
                            </ViewCell>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
                <StackLayout x:Name="BarraDivisoraTituloAbajo"
                    BackgroundColor="Black"
                    WidthRequest="500"
                    HeightRequest="2"
                    HorizontalOptions="Center"
                    Margin="0,10,0,10"/>
                <StackLayout x:Name="AnadirUsuarios"
                             WidthRequest="150"
                             HeightRequest="40">
                    <ImageButton x:Name="AddUsuarios"
                                 Source="adduser.png"
                                 HorizontalOptions="Start"
                                 Clicked="NuevoUsuario"/>
                    <Label Text="Añadir usuario"
                           FontSize="16"
                           TextColor="Black"
                           Margin="35,-25,0,0"
                           FontAttributes="Bold"/>

                </StackLayout>
            </StackLayout>
            <StackLayout x:Name="ListViewWorkers" 
                HorizontalOptions="Center" Margin="0,10,0,0" IsEnabled="False" IsVisible="False">
                <Label x:Name="LabelTitulo2"
                    Text="Tech Talent &#10; Página de administracion &#10;de trabajadores"
                    TextColor="Black"
                    FontAttributes="Bold"
                    HorizontalTextAlignment="Center"
                    SemanticProperties.Description="Tech Talent Fiching System"
                    FontSize="20"
                    HorizontalOptions="Center"/>
                <StackLayout x:Name="BarraDivisoraTituloArriba2"
                            BackgroundColor="Black"
                            WidthRequest="700"
                            HeightRequest="2"
                            HorizontalOptions="Center"
                            Margin="0,10,0,10"/>
                <ListView 
                    x:Name="ListViewTrabajadores" 
                    WidthRequest="700"  
                    HorizontalOptions="Center" 
                    ItemSelected="OnItemSelectedTrabajadores"
                    SeparatorColor="Black">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <ViewCell>
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>
                                    <Label 
                                       Text="Nombre:" 
                                       Margin="-310,0,0,0" 
                                       FontSize="16"
                                       FontAttributes="Bold"
                                       WidthRequest="100"
                                       VerticalOptions="Center"
                                    />
                                    <Label 
                                       WidthRequest="150"
                                       Text="{Binding nombre}" 
                                       Margin="-120,0,0,0" 
                                       FontSize="16"
                                       VerticalOptions="Center"/>
                                    <Label  
                                       Text="Turno:" 
                                       Margin="-20,0,0,0" 
                                       FontSize="16"
                                       FontAttributes="Bold"
                                       WidthRequest="100"
                                       VerticalOptions="Center"/>
                                    <Label 
                                       Text="{Binding grupo.Turno}" 
                                       Margin="90,0,0,0" 
                                       FontSize="16"
                                       WidthRequest="100"
                                       VerticalOptions="Center"/>
                                    <Label  
                                       Text="Usuario:" 
                                       Margin="240,0,0,0" 
                                       FontSize="16"
                                       FontAttributes="Bold"
                                       WidthRequest="100"
                                        VerticalOptions="Center"/>
                                    <Label 
                                       Text="{Binding usuario.Username}" 
                                       Margin="380,0,0,0" 
                                       FontSize="16"
                                       WidthRequest="100"
                                        VerticalOptions="Center"/>
                                    <ImageButton
                                       Source="editar.png"  
                                       WidthRequest="50"
                                       HeightRequest="50"
                                       VerticalOptions="Center"
                                       Margin="510,0,0,0"
                                       x:Name="BotonEditarTrabajadores"
                                       Clicked="BotonEditarTrabajadores_Clicked"/>
                                    <ImageButton
                                       Source="borrar.png"
                                       WidthRequest="50"
                                       HeightRequest="50"
                                       VerticalOptions="Center"
                                       Margin="580,0,0,0"
                                       x:Name="BotonBorrarTrabajadores"
                                       Clicked="BotonBorrarTrabajadores_Clicked"/>
                                </Grid>
                            </ViewCell>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
                <StackLayout x:Name="BarraDivisoraTituloAbajo2"
                    BackgroundColor="Black"
                    WidthRequest="700"
                    HeightRequest="2"
                    HorizontalOptions="Center"
                    Margin="0,10,0,10"/>
                <HorizontalStackLayout x:Name="GrupoAnadeTrabajador" WidthRequest="150"
                             HeightRequest="50">
                    <ImageButton x:Name="AddTrabajadores"
                                 Source="addworker.png"
                                 HorizontalOptions="Start"
                                 VerticalOptions="Center"
                                 Clicked="NuevoTrabajador"/>
                    <Label Text="Añadir trabajador"
                           FontSize="16"
                           TextColor="Black"
                           Margin="5,10,0,0"
                           FontAttributes="Bold"
                           VerticalOptions="Center"/>
                </HorizontalStackLayout>
            </StackLayout>
            <StackLayout x:Name="ListViewGroups" 
                         IsVisible="False" IsEnabled="False">
            <Label 
                Text="Tech Talent &#10; Gestion de turnos"
                TextColor="Black"
                FontAttributes="Bold"
                HorizontalTextAlignment="Center"
                SemanticProperties.Description="Tech Talent Fiching System"
                FontSize="20"
                HorizontalOptions="Center"
                Margin="0,10,0,0"
                x:Name="LabelTitulo3"/>
            <StackLayout BackgroundColor="Black"
                     HeightRequest="2"
                     WidthRequest="800"
                     HorizontalOptions="Center"/>
            <StackLayout HorizontalOptions="Center" Margin="0,10,0,0">
                <ListView 
                x:Name="ListViewGrupos" 
                WidthRequest="700"  
                HorizontalOptions="Center" 
                ItemSelected="OnItemSelectedGruposTrabajo"
                SeparatorColor="Black">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <ViewCell>
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>
                                    <Label 
                                       Text="Turno:" 
                                       Margin="-410,0,0,0" 
                                       FontSize="16"
                                       FontAttributes="Bold"
                                       WidthRequest="100"
                                        VerticalOptions="Center"
                                    />
                                    <Label 
                                       WidthRequest="150"
                                       Text="{Binding Turno}" 
                                       Margin="-250,0,0,0" 
                                       FontSize="16"
                                        VerticalOptions="Center"/>
                                    <Label  
                                       Text="Hora de entrada:" 
                                       Margin="-100,0,0,0" 
                                       FontSize="16"
                                       FontAttributes="Bold"
                                       WidthRequest="170"
                                        VerticalOptions="Center"/>
                                    <Label 
                                       Text="{Binding HoraEntrada}" 
                                       Margin="90,0,0,0" 
                                       FontSize="16"
                                       WidthRequest="100"
                                        VerticalOptions="Center"/>
                                    <Label  
                                       Text="Hora de salida:" 
                                       Margin="240,0,0,0" 
                                       FontSize="16"
                                       FontAttributes="Bold"
                                       WidthRequest="130"
                                        VerticalOptions="Center"/>
                                    <Label 
                                       Text="{Binding HoraSalida}" 
                                       Margin="440,0,0,0" 
                                       FontSize="16"
                                       WidthRequest="100"
                                        VerticalOptions="Center"/>
                                        <ImageButton
                                       Source="editar.png"  
                                       WidthRequest="50"
                                       HeightRequest="50"
                                       VerticalOptions="Center"
                                       Margin="510,0,0,0"
                                       x:Name="BotonEditarGruposTrabajo"
                                       Clicked="BotonEditarGruposTrabajo_Clicked"/>
                                        <ImageButton
                                       Source="borrar.png"
                                       WidthRequest="50"
                                       HeightRequest="50"
                                       VerticalOptions="Center"
                                       Margin="580,0,0,0"
                                       x:Name="BotonBorrarGruposTrabajo"
                                       Clicked="BotonBorrarGruposTrabajo_Clicked"/>
                                    </Grid>
                            </ViewCell>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </StackLayout>
            <StackLayout BackgroundColor="Black"
                     HeightRequest="2"
                     WidthRequest="800"
                     HorizontalOptions="Center"/>
                <HorizontalStackLayout HorizontalOptions="Center" WidthRequest="150"
                             HeightRequest="50" Margin="-30,0,0,0">
                    <ImageButton x:Name="AddGrupos"
                                 Source="addgroups.png"
                                 HorizontalOptions="Start"
                                 Clicked="NuevoGrupoTrabajo"
                                 VerticalOptions="Center"/>
                    <Label Text="Añadir grupo de trabajo"
                           FontSize="16"
                           TextColor="Black"
                           Margin="5,0,0,0"
                           FontAttributes="Bold"
                           VerticalOptions="Center"/>
                    
                </HorizontalStackLayout>
            </StackLayout>
            <StackLayout x:Name="ListViewZones"
                         IsVisible="False" IsEnabled="False">
                <Label 
                Text="Tech Talent &#10; Gestion de zonas"
                TextColor="Black"
                FontAttributes="Bold"
                HorizontalTextAlignment="Center"
                SemanticProperties.Description="Tech Talent Fiching System"
                FontSize="20"
                HorizontalOptions="Center"
                x:Name="LabelTitulo4"/>
                <HorizontalStackLayout x:Name="NombresColumnas">
                    <Label Text="Nombre Zona:"
                           Margin="445,0,0,0"
                           FontAttributes="Bold"/>
                </HorizontalStackLayout>
                <StackLayout BackgroundColor="Black"
                     HeightRequest="2"
                     WidthRequest="800"
                     HorizontalOptions="Center"/>
                <StackLayout HorizontalOptions="Center" Margin="0,10,0,0">
                    <ListView 
                x:Name="ListViewZonas" 
                WidthRequest="700"  
                HorizontalOptions="Center" 
                ItemSelected="OnItemSelectedZonas"
                SeparatorColor="Black">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <ViewCell>
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>
                                        
                                        <Label 
                                       WidthRequest="150"
                                       VerticalOptions="Center"
                                       Text="{Binding Nombre}" 
                                       Margin="25,0,0,0" 
                                       FontSize="16"/>
                                        <ImageButton
                                       Source="editar.png"  
                                       WidthRequest="50"
                                       HeightRequest="50"
                                       VerticalOptions="Center"
                                       Margin="510,0,0,0"
                                       x:Name="BotonEditarZonas"
                                       Clicked="BotonEditarZonas_Clicked"/>
                                        <ImageButton
                                       Source="borrar.png"
                                       WidthRequest="50"
                                       HeightRequest="50"
                                       VerticalOptions="Center"
                                       Margin="580,0,0,0"
                                       x:Name="BotonBorrarZonas"
                                       Clicked="BotonBorrarZonas_Clicked"/>

                                    </Grid>
                                </ViewCell>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </StackLayout>
                <StackLayout BackgroundColor="Black"
                     HeightRequest="2"
                     WidthRequest="800"
                     HorizontalOptions="Center"/>
                <HorizontalStackLayout x:Name="BotonesZonaInferior" 
                             HorizontalOptions="Center" WidthRequest="150"
                             HeightRequest="50" Margin="-240,0,0,0">
                    <ImageButton x:Name="BotonAnadeZona"
                                 Source="addzonas.png"
                                 Clicked="BotonAnadeZona_Clicked"/>
                    <Label Text="Añadir nueva zona de trabajo"
                           FontSize="16"
                           TextColor="Black"
                           Margin="5,0,0,0"
                           FontAttributes="Bold"
                           VerticalOptions="Center"/>
                    <ImageButton x:Name="AddZonasGrupos"
                                 Source="addzonasgrupotrabajo.png"
                                 HorizontalOptions="Start"
                                 Clicked="NuevoGrupoTrabajo"
                                 VerticalOptions="Center"/>
                    <Label Text="Añadir zona a grupo de trabajo"
                           FontSize="16"
                           TextColor="Black"
                           Margin="5,0,0,0"
                           FontAttributes="Bold"
                           VerticalOptions="Center"/>
                </HorizontalStackLayout>
            </StackLayout>
            
            <StackLayout x:Name="GrupoDeBotones">
                <StackLayout x:Name="GrupoBotonesPrincipal" HorizontalOptions="Center" Margin="25,0,0,0" IsEnabled="False" IsVisible="False">
                    <HorizontalStackLayout>
                        <Button
                        x:Name="BtnAñadir"
                        Text="Añadir"
                        WidthRequest="250"
                        HeightRequest="100"
                        FontSize="24"
                        BackgroundColor="#787774"
                        Clicked="BtnAñadir_Clicked"/>
                        <Button
                        x:Name="BtnModificar"
                        Text="Modificar"
                        WidthRequest="250"
                        HeightRequest="100"
                        FontSize="24"
                        BackgroundColor="#787774"
                        Clicked="BtnModificar_Clicked"/>
                    </HorizontalStackLayout>
                    <HorizontalStackLayout>
                        <Button
                        x:Name="BtnEliminar"
                        Text="Eliminar"
                        WidthRequest="250"
                        HeightRequest="100"
                        FontSize="24"
                        BackgroundColor="#787774"
                        Clicked="BtnEliminar_Clicked"/>
                        <Button
                        x:Name="BtnAlterno"
                        Text="Mas Opciones"
                        WidthRequest="250"
                        HeightRequest="100"
                        FontSize="24"
                        BackgroundColor="#787774"
                        Clicked="BtnAlterno_Clicked"/>
                    </HorizontalStackLayout>
                </StackLayout>
                <StackLayout x:Name="GrupoAnadir" IsEnabled="False" IsVisible="False" Margin="25,0,0,0" HorizontalOptions="Center">
                    <HorizontalStackLayout >
                        <Button
                        WidthRequest="250"
                        HeightRequest="100"
                        FontSize="24"
                        FontAttributes="Bold"
                        BackgroundColor="#007032"
                        Clicked="NuevoUsuario"
                        Text="      Registrar&#10; nuevo usuario"
                        x:Name="RegistrarNuevoUsuario"/>
                        <Button
                        WidthRequest="250"
                        HeightRequest="100"
                        FontSize="24"
                         BackgroundColor="#007032"
                        FontAttributes="Bold"
                        Clicked="NuevoTrabajador"
                        Text="        Registrar&#10; nuevo trabajador"
                        x:Name="RegistrarNuevoTrabajador"/>
                    </HorizontalStackLayout>
                    <HorizontalStackLayout>
                        <Button
                        WidthRequest="250"
                        HeightRequest="100"
                        FontSize="24"
                        FontAttributes="Bold"
                         BackgroundColor="#007032"
                        Text=" Registra nuevo &#10;grupo de trabajo"
                        x:Name="RegistrarNuevoGrupoTrabajo"
                        Clicked="NuevoGrupoTrabajo"/>

                        <Button
                        WidthRequest="250"
                        HeightRequest="100"
                        FontSize="24"
                        FontAttributes="Bold"
                         BackgroundColor="#007032"
                        Text=" Registra nueva &#10;Tarea de trabajo"
                        x:Name="RegistrarNuevaTareaTrabajo"
                        Clicked="RegistrarNuevaTareaTrabajo_Clicked"/>
                    </HorizontalStackLayout>
                    <HorizontalStackLayout>
                        <Button
                            WidthRequest="250"
                            HeightRequest="100"
                            FontSize="24"
                            FontAttributes="Bold"
                             BackgroundColor="#007032"
                            Text=" Registra nueva &#10;Zona de trabajo"
                            x:Name="RegistrarNuevaZona"
                            Clicked="RegistrarNuevaZona_Clicked"/>
                        <Button
                            WidthRequest="250"
                            HeightRequest="100"
                            FontSize="24"
                            FontAttributes="Bold"
                            BackgroundColor="#787774"
                            Text=" Volver"
                            Clicked="VolverGrupoBotonesPrincipales_Clicked"/>
                    </HorizontalStackLayout>
                </StackLayout>
                <StackLayout x:Name="GrupoModificar" IsEnabled="False" IsVisible="False" Margin="25,0,0,0" HorizontalOptions="Center">
                    <HorizontalStackLayout>
                        <Button
                        WidthRequest="250"
                        HeightRequest="100"
                        FontSize="24"
                        FontAttributes="Bold"
                         BackgroundColor="#083f5e"
                        Text="Modificar&#10; usuario"
                        Clicked="ModificaUsuario"
                        x:Name="ModificarUsuario"/>
                        <Button
                        WidthRequest="250"
                        HeightRequest="100"
                        FontSize="24"
                        FontAttributes="Bold"
                        Clicked="ModificaTrabajador"
                         BackgroundColor="#083f5e"
                        Text="  Modificar&#10; trabajador"
                        x:Name="ModificarTrabajador"/>
                    </HorizontalStackLayout>
                    <HorizontalStackLayout>
                        <Button
                        WidthRequest="250"
                        HeightRequest="100"
                        FontSize="24"
                        FontAttributes="Bold"
                         BackgroundColor="#083f5e"
                        Text="       Modificar&#10; grupo de trabajo"
                        x:Name="ModificarGrupoTrabajo"
                        Clicked="ModificaGrupoTrabajo"/>
                        <Button
                        WidthRequest="250"
                        HeightRequest="100"
                        FontSize="24"
                        FontAttributes="Bold"
                         BackgroundColor="#083f5e"
                        Text="       Modificar&#10; Tarea de trabajo"
                        x:Name="ModificarTareaTrabajo"
                        Clicked="ModificarTareaTrabajo_Clicked"/>
                    </HorizontalStackLayout>
                    <HorizontalStackLayout>
                        <Button
                        WidthRequest="250"
                        HeightRequest="100"
                        FontSize="24"
                        FontAttributes="Bold"
                         BackgroundColor="#083f5e"
                        Text="       Modificar&#10; Zona de trabajo"
                        x:Name="ModificarZona"
                        Clicked="ModificarZona_Clicked"/>
                        <Button
                            WidthRequest="250"
                            HeightRequest="100"
                            FontSize="24"
                            FontAttributes="Bold"
                            BackgroundColor="#787774"
                            Text=" Volver"
                            Clicked="VolverGrupoBotonesPrincipales_Clicked"/>
                    </HorizontalStackLayout>
                </StackLayout>
                <StackLayout x:Name="GrupoEliminar" IsEnabled="False" IsVisible="False" Margin="25,0,0,0" HorizontalOptions="Center">
                    <HorizontalStackLayout>
                        <Button
                        WidthRequest="250"
                        HeightRequest="100"
                        FontSize="24"
                        FontAttributes="Bold"
                         BackgroundColor="#5c1616"
                        Text="Eliminar&#10; usuario"
                        x:Name="EliminarUsuario"
                        Clicked="EliminaUsuario"/>
                        <Button
                        WidthRequest="250"
                        HeightRequest="100"
                        FontSize="24"
                        FontAttributes="Bold"
                         BackgroundColor="#5c1616"
                        Text="    Eliminar&#10; trabajador"
                        x:Name="ElimineTrabajador"
                        Clicked="EliminarTrabajador"/>
                    </HorizontalStackLayout>
                    <HorizontalStackLayout>
                        <Button
                        WidthRequest="250"
                        HeightRequest="100"
                        FontSize="24"
                        FontAttributes="Bold"
                         BackgroundColor="#5c1616"
                        Text="         Eliminar&#10; grupo de trabajo"
                        x:Name="EliminaGrupoTrabajo"
                        Clicked="EliminarGrupoTrabajador"/>
                        <Button
                        WidthRequest="250"
                        HeightRequest="100"
                        FontSize="24"
                        FontAttributes="Bold"
                         BackgroundColor="#5c1616"
                        Text="         Eliminar&#10; Tarea de trabajo"
                        x:Name="EliminaTareaTrabajo"
                        Clicked="EliminaTareaTrabajo_Clicked"/>
                    </HorizontalStackLayout>
                    <HorizontalStackLayout>
                        <Button
                        WidthRequest="250"
                        HeightRequest="100"
                        FontSize="24"
                        FontAttributes="Bold"
                         BackgroundColor="#5c1616"
                        Text="         Eliminar&#10; Zona de trabajo"
                        x:Name="EliminaZona"
                        Clicked="EliminaZona_Clicked"/>
                        <Button
                            WidthRequest="250"
                            HeightRequest="100"
                            FontSize="24"
                            FontAttributes="Bold"
                            BackgroundColor="#787774"
                            Text=" Volver"
                            Clicked="VolverGrupoBotonesPrincipales_Clicked"/>
                    </HorizontalStackLayout>
                </StackLayout>
                <StackLayout x:Name="GrupoAlterno" IsEnabled="False" IsVisible="False" Margin="25,0,0,0" HorizontalOptions="Center">
                    <HorizontalStackLayout>
                        <Button
                        WidthRequest="250"
                        HeightRequest="100"
                        FontSize="24"
                        FontAttributes="Bold"
                         BackgroundColor="#462f4f"
                        Text="    Añadir tareas&#10;a grupo de trabajo"
                        x:Name="AnadeTareasGrupo"
                        Clicked="AnadeTareasGrupo_Clicked"
                        />
                        <Button
                        WidthRequest="250"
                        HeightRequest="100"
                        FontSize="24"
                        FontAttributes="Bold"
                         BackgroundColor="#462f4f"
                        Text="      Añadir zonas&#10;a grupo de trabajo"
                        x:Name="AnadirZonaGrupo"
                        Clicked="AnadirZonaGrupo_Clicked"/>
                    </HorizontalStackLayout>
                    <HorizontalStackLayout>
                        <Button
                        WidthRequest="250"
                        HeightRequest="100"
