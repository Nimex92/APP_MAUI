<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HolaMundoMAUI.AltaGrupoTrabajo"
             Title="NewPage1"
             BackgroundColor="White">
    <StackLayout
        Margin="0,20,0,0">
        <Label 
                Text="Tech Talent &#10; Alta Grupo de trabajo"
                TextColor="Black"
                FontAttributes="Bold"
                HorizontalTextAlignment="Center"
                SemanticProperties.Description="Tech Talent Fiching System"
                FontSize="20"
                HorizontalOptions="Center"
                x:Name="TituloEmpresa"/>
        <StackLayout>
            <StackLayout x:Name="LayoutCampos"
                     HorizontalOptions="Center"
                     VerticalOptions="Center"
                     Margin="0,10,0,0"
                     WidthRequest="320"
                     HeightRequest="280"
                     BackgroundColor="#828282">
                <Entry x:Name="CampoNombre"
                        Placeholder="Introduce Nombre:"
                        PlaceholderColor="Black"
                        Margin="0,15,0,0"
                        FontSize="24"
                        HorizontalOptions="Center"
                        VerticalOptions="Center"
                        WidthRequest="300"
                        BackgroundColor="White"
                        TextColor="Black"
                        ClearButtonVisibility="WhileEditing"/>
                <HorizontalStackLayout
                        Margin="40,10,0,0"
                        WidthRequest="300">
                    <Label Text="Selecciona Horario: " TextColor="White" FontAttributes="Bold"
                               VerticalOptions="Start"/>
                    <Picker
                            WidthRequest="150"
                            x:Name="SelectorHora"
                            BackgroundColor="White"
                            TextColor="Black"
                            HorizontalTextAlignment="Center"/>
                    <Picker
                            WidthRequest="150"
                            x:Name="SelectorMinuto"
                            BackgroundColor="White"
                            TextColor="Black"
                            HorizontalTextAlignment="Center"/>
                </HorizontalStackLayout>

                <Button 
                        Text="Registrar"
                        x:Name="BotonRegistrarAdmin"
                        HorizontalOptions="Center"
                        Margin="0,10,0,0"
                        BackgroundColor="Black"
                        Clicked="RegistraNuevoGrupoTrabajo"
                        WidthRequest="300"/>
            </StackLayout>
        </StackLayout>
    </StackLayout>
</ContentPage>